<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:clipToPadding="true"
    android:fillViewport="false"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_geometry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/main_card_margin_vertical"
            android:layout_marginEnd="@dimen/main_card_margin_horizontal"
            android:layout_marginStart="@dimen/main_card_margin_horizontal"
            android:layout_marginTop="@dimen/main_card_margin_vertical"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardCornerRadius="@dimen/cardview_default_radius"
            card_view:cardElevation="@dimen/cardview_default_elevation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_geometry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    card_view:srcCompat="@drawable/material_design_2" />

                <TextView
                    android:id="@+id/txtGeometryDef"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_geometry"
                    android:layout_marginEnd="@dimen/card_title_margin"
                    android:layout_marginStart="@dimen/card_title_margin"
                    android:layout_marginTop="@dimen/card_title_margin_top"
                    android:text="Mathematics Visualization" />

                <TextView
                    android:id="@+id/txtGeometryExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtGeometryDef"
                    android:layout_marginBottom="@dimen/card_subtitle_margin"
                    android:layout_marginEnd="@dimen/card_subtitle_margin"
                    android:layout_marginStart="@dimen/card_subtitle_margin"
                    android:layout_marginTop="@dimen/card_button_margin"
                    android:text="The mathematica visualization is a type of game that is played and played again and again" />

                <Button
                    android:id="@+id/btnGeometry"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txtGeometryExp"
                    android:layout_margin="@dimen/card_button_margin"
                    android:text="More info..."
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_algebra"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/main_card_margin_vertical"
            android:layout_marginEnd="@dimen/main_card_margin_horizontal"
            android:layout_marginStart="@dimen/main_card_margin_horizontal"
            android:layout_marginTop="@dimen/main_card_margin_vertical"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardCornerRadius="@dimen/cardview_default_radius"
            card_view:cardElevation="@dimen/cardview_default_elevation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_algebra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    card_view:srcCompat="@drawable/material_design_2" />

                <TextView
                    android:id="@+id/txtAlgebraDef"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_algebra"
                    android:layout_marginEnd="@dimen/card_title_margin"
                    android:layout_marginStart="@dimen/card_title_margin"
                    android:layout_marginTop="@dimen/card_title_margin_top"
                    android:text="Mathematics Visualization" />

                <TextView
                    android:id="@+id/txtAlgebraExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtAlgebraDef"
                    android:layout_marginBottom="@dimen/card_subtitle_margin"
                    android:layout_marginEnd="@dimen/card_subtitle_margin"
                    android:layout_marginStart="@dimen/card_subtitle_margin"
                    android:layout_marginTop="@dimen/card_button_margin"
                    android:text="The mathematica visualization is a type of game that is played and played again and again" />

                <Button
                    android:id="@+id/btnAlgebra"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txtAlgebraExp"
                    android:layout_margin="@dimen/card_button_margin"
                    android:text="More info..."
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
